<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.nicholas.gameprofile.PlayerProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout20">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/gamopaido"
            android:layout_weight="0.1"
            android:contentDescription="Profile Image" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:text="Mounolis Ioannides, 21"
        android:gravity="center"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Football"
        android:id="@+id/textView20"
        android:layout_below="@+id/linearLayout20"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:textStyle="italic|bold"
        android:layout_gravity="center"
        android:layout_weight="0.01"
        />




    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold|italic"
            android:text="TurnUps 7/9"
            android:gravity="center"
            android:layout_weight="0.01"
            android:textAppearance="?android:attr/textAppearanceMedium"/>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="0.01"
        android:textStyle="bold|italic"
        android:text="Description"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="0.01"
        android:textStyle="bold|italic"
        android:text="Teammates"
        android:textAppearance="?android:attr/textAppearanceMedium"/>





</LinearLayout>
